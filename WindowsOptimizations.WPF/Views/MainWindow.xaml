<Window x:Class="WindowsOptimizations.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:WindowsOptimizations.UI.ViewModels"
        xmlns:local="clr-namespace:WindowsOptimizations.Views"
        mc:Ignorable="d"
        Title="Windows Optimizations"
        Height="400"
        Width="650"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignDarkBackground}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="CanMinimize">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <!--Disable unnecessary windows services button.-->
        <Button Width="300"
                Height="30"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="10,10,0,0"
                Content="Disable Unnecessary Windows Services"
                Command="{Binding DisableUnnecessaryWindowsServicesCommand}" />

        <!--Reduce mouse input latency button.-->
        <Button Width="300"
                Height="30"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="10, 50, 0, 0"
                Content="Reduce Mouse Input Latency"
                Command="{Binding ReduceMouseInputLatencyCommand}" />

        <!--Optimize system profile button.-->
        <Button Width="300"
                Height="30"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="10, 90, 0, 0"
                Content="Optimize System Profile"
                Command="{Binding OptimizeSystemProfileCommand}" />

        <!--Set timer resoolution to maximum button.-->
        <Button Width="300"
                Height="30"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="10, 130, 0, 0"
                Content="Set System Timer to Maximum Resolution"
                Command="{Binding SetSystemTimerToMaximumResolutionCommand}" />

        <!--Debloat Windows 10.-->
        <Button Width="300"
                Height="30"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="10, 170, 0, 0"
                Content="Debloat Windows 10 [Use with caution]"
                Command="{Binding DebloatWindowsCommand}" />

        <!--Optimize network options button.-->
        <Button Width="300"
                Height="30"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="10, 210, 0, 0"
                Content="Optimize Network Options"
                Command="{Binding OptimizeNetworkOptionsCommand}" />

        <Button Width="300"
                Height="30"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="10, 250, 0, 0"
                Content="Reduce CPU Processes"
                Command="{Binding ReduceCPUProcessesCommand}" />

        <!--Information about the system's timer.-->
        <materialDesign:Card Margin="0,0,10,10"
                             Width="270"
                             Height="105"
                             VerticalAlignment="Bottom"
                             HorizontalAlignment="Right"
                             Background="{DynamicResource MaterialDesignDarkSeparatorBackground}" Grid.ColumnSpan="2">

            <StackPanel>
                <Label Content="{Binding TimerResolutionMinimumValue}"
               Width="260"
               Height="25"
               Margin="5"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Foreground="{DynamicResource MaterialDesignDarkForeground}"
               Background="{DynamicResource MaterialDesignDarkSeparatorBackground}" />

                <Label Content="{Binding TimerResolutionMaximumValue}"
               Width="260"
               Height="25"
               Margin="5"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Foreground="{DynamicResource MaterialDesignDarkForeground}"
               Background="{DynamicResource MaterialDesignDarkSeparatorBackground}" />

                <Label Content="{Binding TimerResolutionCurrentValue}"
               Width="260"
               Height="25"
               Margin="5"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Left"
               Foreground="{DynamicResource MaterialDesignDarkForeground}"
               Background="{DynamicResource MaterialDesignDarkSeparatorBackground}" />
            </StackPanel>
        </materialDesign:Card>

        <!--An 'About' button containg licensing information and acknowledgements.-->
        <Button Width="55"
                Height="35"
                Margin="5"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Command="{Binding AboutCommand}">

            <Button.Content>
                <Viewbox Width="24"
                         Height="24">

                    <Canvas Width="24"
                        Height="24">

                        <Path Fill="White"
                          Data="M11,9H13V7H11M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M11,17H13V11H11V17Z" />

                    </Canvas>
                </Viewbox>
            </Button.Content>
        </Button>
    </Grid>
</Window>
